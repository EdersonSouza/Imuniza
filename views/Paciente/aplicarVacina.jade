extends ../layout

block content
	.container
			div(id="cva").row
				h5 Aplicar Vacina
				.input-field.col.s6
					input.validate(type="text" name="sus" required id="susPaciente")
					label(for="sus") Registro do SUS
				.input-field.col.s5
					button(class="btn-floating btn-large blue" id="buscaPaciente")
						i(class="material-icons") search
				if messages.erro
					.row
						.col.s12.m6.l6
							each msg in messages.erro
								b=msg
								br

			form.col.s12(action="/aplicarVacina" method="POST")#selectVacina
				.row
					input(type="hidden" name="id" id="idPaciente" value="#{paciente._id || ''}")
					.row
							h5(id="nome")
					.row
						.input-field.col.s6
							select(name="vacinas")
								option(value="", disabled, selected) Vacinas
								each vacina in vacinas
									option(value="#{vacina._id}") #{vacina.nome}
						.input-field.col.s6
							input(type="DATE" name="date")
	
				.row
					.input-field.col.s6
						button.btn.waves-effect.waves-light(type="submit" name="action") Aplicar
							i.material-icons.right send