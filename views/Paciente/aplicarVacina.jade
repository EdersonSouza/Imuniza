extends ../layout

block content
	.container
		h5 Aplicar Vacina
		form.col.s12(action="" method="POST")
			.row
				.input-field.col.s6
					input.validate(type="text" name="nome" required )
					label(for="nome") Nome do Paciente
				.input-field.col.s5
					button(class="btn-floating btn-large blue")
						i(class="material-icons") search
			.row
				.input-field.col.s6
					select#selectVacina(name="vacinas")
						option(value="", disabled, selected) Vacinas
						each vacina in vacinas
							option(value="#{vacina._id}") #{vacina.nome}
			.row
				.input-field.col.s6
					button.btn.waves-effect.waves-light(type="submit" name="action") Aplicar
						i.material-icons.right send