extends ../layout

block content
	.container
		h5 Aplicar Vacina
			.row
				.input-field.col.s6
					input.validate(type="text" name="cpf" required id="cpfPaciente")
					label(for="cpf") CPF do Paciente
				.input-field.col.s5
					button(class="btn-floating btn-large blue" id="buscaPaciente")
						i(class="material-icons") search
			form.col.s12(action="/aplicarVacina" method="POST")#selectVacina
				.row
					.input-field.col.s6
						input(type="hiden" name="id" id="idPaciente" value="#{paciente._id || ''}")
						select(name="vacinas")
							option(value="", disabled, selected) Vacinas
							each vacina in vacinas
								option(value="#{vacina._id}") #{vacina.nome}
					.input-field.col.s6
						input(type="date" name="date")
				.row
					.input-field.col.s6
						button.btn.waves-effect.waves-light(type="submit" name="action") Aplicar
							i.material-icons.right send